<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/menu_bg"
    tools:context="hackathontw.com.br.hackathontw.MenuActivity">

    <TableRow
        android:layout_height="43dp"
        android:layout_width="wrap_content"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/title"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            app:srcCompat="@drawable/niveis_title" />
    </TableRow>

<TableRow
    android:layout_marginTop="50dp"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:gravity="center_horizontal">
    <ImageView
        android:id="@+id/level1"
        android:layout_marginTop="10dp"
        android:layout_height="107dp"
        android:layout_width="96dp"
        app:srcCompat="@drawable/level_unlocked" />

    <ImageView
        android:id="@+id/level2"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_height="107dp"
        android:layout_width="96dp"
        app:srcCompat="@drawable/level_unlocked"/>

    <ImageView
        android:id="@+id/level3"
        android:layout_marginTop="10dp"
        android:layout_height="107dp"
        android:layout_width="96dp"
        app:srcCompat="@drawable/level_unlocked"/>
</TableRow>

    <TableRow
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/level4"
            android:layout_height="107dp"
            android:layout_width="96dp"
            app:srcCompat="@drawable/level_unlocked"/>

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/level5"
            android:layout_height="107dp"
            android:layout_width="96dp"
            app:srcCompat="@drawable/level_unlocked"/>

        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/level6"
            android:layout_height="107dp"
            android:layout_width="96dp"
            app:srcCompat="@drawable/level_unlocked"/>

</TableRow>

    <TableRow
        android:layout_marginTop="25dp"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/level7"
            android:layout_height="107dp"
            android:layout_width="96dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/level_unlocked"/>

        <ImageView
            android:id="@+id/level8"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_height="107dp"
            android:layout_width="96dp"
            app:srcCompat="@drawable/level_unlocked"/>

        <ImageView
            android:id="@+id/level9"
            android:layout_marginTop="10dp"
            android:layout_height="107dp"
            android:layout_width="96dp"
            app:srcCompat="@drawable/level_unlocked"/>
    </TableRow>

</LinearLayout>